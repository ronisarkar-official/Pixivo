<% include ./partials/indexheader.ejs %>

<!-- PIXIVO — Optimized hero + features (no scripts / no tailwind config) -->

<style>
	:root {
		--pixivo-primary: #7a4fff;
		--pixivo-secondary: #ff6bca;
		--bg-dark: #0f0c29;
		--bg-mid: #302b63;
		--bg-light: #24243e;
	}

	@keyframes float {
		0%,
		100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-14px);
		}
	}

	@media (prefers-reduced-motion: reduce) {
		.animate-float {
			animation: none !important;
		}
	}

	/* small helper for accessible hidden text */
	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border: 0;
	}
</style>

<body
	class="relative overflow-x-hidden min-h-screen bg-gradient-to-br from-[#0f0c29] via-[#302b63] to-[#24243e] text-white">
	<div
		class="absolute inset-0 -z-10 pointer-events-none"
		aria-hidden="true">
		<div
			class="w-full h-full bg-[radial-gradient(ellipse_at_20%_30%,rgba(122,79,255,0.12)_0%,transparent_40%),radial-gradient(ellipse_at_80%_70%,rgba(255,107,202,0.12)_0%,transparent_40%)]"></div>
		<div
			class="absolute top-1/4 left-1/4 w-56 h-56 rounded-full bg-[rgba(122,79,255,0.12)] blur-3xl animate-float"></div>
		<div
			class="absolute top-2/3 right-1/3 w-40 h-40 rounded-full bg-[rgba(255,107,202,0.12)] blur-3xl animate-float"></div>
	</div>

	<main
		class="relative z-10 flex items-center min-h-screen"
		id="main">
		<div class="container mx-auto px-6 py-12 lg:py-20">
			<div class="flex flex-col lg:flex-row items-center gap-12">
				<!-- LEFT: Content -->
				<section
					class="lg:w-1/2"
					aria-labelledby="hero-heading">
					<div class="flex items-center gap-4 mb-4 mt-6">
						<div
							class="w-14 h-14 rounded-2xl bg-white/10 flex items-center justify-center shadow-md"
							aria-hidden="true">
							<img src="/images/pixivo-logo3.png" alt="">
						</div>

						<div>
							<h1
								id="hero-heading"
								class="text-4xl sm:text-5xl md:text-6xl font-extrabold leading-tight tracking-tight bg-clip-text text-transparent bg-gradient-to-r from-[#9d7aff] to-[#ff6bca]"
								>Pixivo</h1
							>
							<p class="sr-only"
								>Beautiful image sharing platform for photographers and visual
								artists</p
							>
						</div>
					</div>

					<h2
						class="text-2xl sm:text-3xl md:text-4xl font-semibold leading-snug mb-4"
						>Where
						<span
							class="bg-clip-text text-transparent bg-gradient-to-r from-[#9d7aff] to-[#ff6bca]"
							>beautiful images</span
						>
						find their audience</h2
					>

					<p
						class="text-base sm:text-lg text-gray-200 max-w-2xl leading-relaxed mb-6"
						>A place for creators to showcase work, grow their audience, and get
						discovered — optimized for speed, accessibility and conversion.</p
					>

					<div class="flex flex-col items-start gap-3">
						<button
							onclick="openModal('register')"
							class="inline-flex items-center justify-center px-6 py-3 rounded-lg text-lg font-semibold shadow-lg transform transition hover:scale-[1.03] focus:outline-none focus:ring-4 focus:ring-pixivo-primary/30"
							style="
								background: linear-gradient(
									90deg,
									var(--pixivo-primary),
									var(--pixivo-secondary)
								);
							">
							Get Started — Free
							<span
								class="ml-2"
								aria-hidden="true"
								>→</span
							>
						</button>

						<div class="ml-1 text-sm text-gray-300 flex items-center gap-3">
							<div
								class="flex -space-x-3"
								aria-hidden="true">
								<span
									class="w-8 h-8 rounded-full bg-gradient-to-r from-purple-400 to-pink-500 border-2 border-white/10"></span>
								<span
									class="w-8 h-8 rounded-full bg-gradient-to-r from-blue-400 to-teal-500 border-2 border-white/10"></span>
								<span
									class="w-8 h-8 rounded-full bg-gradient-to-r from-yellow-400 to-orange-500 border-2 border-white/10"></span>
							</div>
							<span
								>Join <strong class="text-white">45K+</strong> creators</span
							>
						</div>
					</div>

					<ul
						class="mt-6 grid grid-cols-1 sm:grid-cols-2 gap-3 text-sm text-gray-300 max-w-xl">
						<li class="flex items-center gap-3"
							><i class="ri-shield-check-line"></i>
							Trusted moderation</li
						>
						<li class="flex items-center gap-3"
							><i class="ri-download-cloud-fill"></i>
							High-res original storage</li
						>
					</ul>
				</section>

				<!-- RIGHT: Image collage (semantic, responsive) -->
				<aside
					class="lg:w-1/2"
					aria-label="Featured image grid">
					<div
						class="relative max-w-lg mx-auto animate-float"
						style="animation: float 6s ease-in-out infinite"
						role="img"
						aria-hidden="true">
						<div class="grid grid-cols-4 grid-rows-3 gap-3 w-full h-96">
							<div
								class="rounded-xl overflow-hidden shadow-2xl bg-gradient-to-br from-[#7a4fff]/20 to-[#ff6bca]/20 col-span-2 row-span-2 flex items-center justify-center">
								<img
									src="/images/placeholder-1.png"
									alt="Featured work"
									class="w-full h-full object-cover"
									loading="lazy" />
							</div>

							<div
								class="rounded-xl overflow-hidden shadow-2xl bg-gradient-to-br from-[#7a4fff]/12 to-[#ff6bca]/12">
								<img
									src="/images/placeholder-2.png"
									alt="Gallery sample"
									class="w-full h-full object-cover"
									loading="lazy" />
							</div>

							<div
								class="rounded-xl overflow-hidden shadow-2xl bg-gradient-to-br from-[#7a4fff]/12 to-[#ff6bca]/12">
								<img
									src="/images/placeholder-3.png"
									alt="Gallery sample"
									class="w-full h-full object-cover"
									loading="lazy" />
							</div>

							<div
								class="rounded-xl overflow-hidden shadow-2xl bg-gradient-to-br from-[#7a4fff]/14 to-[#ff6bca]/14 col-span-2">
								<img
									src="/images/placeholder-4.png"
									alt="Wide feature"
									class="w-full h-full object-cover"
									loading="lazy" />
							</div>

							<div
								class="rounded-xl overflow-hidden shadow-2xl bg-gradient-to-br from-[#7a4fff]/10 to-[#ff6bca]/10"
								><img
									src="/images/placeholder-5.png"
									alt="Gallery"
									class="w-full h-full object-cover"
									loading="lazy"
							/></div>
							<div
								class="rounded-xl overflow-hidden shadow-2xl bg-gradient-to-br from-[#7a4fff]/10 to-[#ff6bca]/10"
								><img
									src="/images/placeholder-6.png"
									alt="Gallery"
									class="w-full h-full object-cover"
									loading="lazy"
							/></div>
							<div
								class="rounded-xl overflow-hidden shadow-2xl bg-gradient-to-br from-[#7a4fff]/10 to-[#ff6bca]/10"
								><img
									src="/images/placeholder-7.png"
									alt="Gallery"
									class="w-full h-full object-cover"
									loading="lazy"
							/></div>
						</div>

						<div
							class="absolute -top-5 -right-10 bg-gradient-to-r from-[#7a4fff] to-[#ff6bca] rounded-full px-4 py-2 font-semibold flex items-center shadow-lg transform rotate-1"
							aria-hidden="true">
							<i class="ri-fire-fill mr-2"></i>
							<span>Trending</span>
						</div>

						<div
							class="absolute -bottom-5 -left-5 bg-gradient-to-r from-blue-500 to-teal-400 rounded-full px-4 py-2 font-semibold flex items-center shadow-lg -rotate-2"
							aria-hidden="true">
							<i class="ri-sparkling-2-fill mr-2"></i>
							<span>Featured</span>
						</div>
					</div>
				</aside>
			</div>
		</div>
	</main>

	<section class="relative z-10 py-12 bg-black/20 backdrop-blur-sm">
		<div class="container mx-auto px-6">
			<div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
				<article
					class="p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm"
					tabindex="0">
					<div
						class="w-14 h-14 rounded-xl bg-gradient-to-r from-[#7a4fff] to-[#ff6bca] flex items-center justify-center mb-4">
						<i
							class="ri-upload-2-fill text-2xl"
							aria-hidden="true"></i>
					</div>
					<h3 class="text-xl font-semibold mb-2">Upload & Showcase</h3>
					<p class="text-gray-300"
						>Share high-quality images in customizable galleries and
						collections.</p
					>
				</article>

				<article
					class="p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm"
					tabindex="0">
					<div
						class="w-14 h-14 rounded-xl bg-gradient-to-r from-blue-500 to-teal-400 flex items-center justify-center mb-4">
						<i class="ri-team-fill text-2xl"></i>
					</div>
					<h3 class="text-xl font-semibold mb-2">Connect & Collaborate</h3>
					<p class="text-gray-300"
						>Find collaborators, join challenges and get feedback from the
						community.</p
					>
				</article>

				<article
					class="p-6 rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm"
					tabindex="0">
					<div
						class="w-14 h-14 rounded-xl bg-gradient-to-r from-amber-500 to-orange-500 flex items-center justify-center mb-4">
						<i class="ri-line-chart-fill text-2xl"></i>
					</div>
					<h3 class="text-xl font-semibold mb-2">Grow Your Audience</h3>
					<p class="text-gray-300"
						>Analytics, tagging and curator features to get your work in front
						of the right people.</p
					>
				</article>
			</div>
		</div>
	</section>

	<% include ./partials/indexfooter.ejs %>
</body>
