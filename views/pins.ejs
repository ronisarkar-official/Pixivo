<% include ./partials/header.ejs %>
<div class="max-w-5xl mx-auto mt-10 px-4 sm:px-0">
	<!-- Masonry Layout -->
	<div class="columns-2 sm:columns-2 lg:columns-4 gap-4 space-y-4">
		<% user.posts.forEach((elem) => { %>
			
		<div
			class="break-inside-avoid overflow-hidden rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300">
			<a
				href="/pin/<%= elem._id %>"
				>
				<img
					src="<%= elem.image %>"
					alt="<%= elem.imageTitle%>"
					class="w-full object-cover rounded-lg" />
			</a>

			<% if (elem.imageTitle) { %>
			<div class="p-3 text-sm"> <%= elem.imageTitle %> </div>
			<% } %>
		</div>
		<% }) %>
	</div>
</div>

<% include ./partials/footer.ejs %>
